<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowAnimationStyle">@style/ActAnimationStyle</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="trans_status_bar" parent="AppTheme"/>

    <style name="SplashTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="ActAnimationStyle" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/base_act_anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/base_act_anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/base_act_back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/base_act_back_exit</item>
    </style>

    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SlideDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BottomSheetAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="RightSheetAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:background">@color/hor_divide_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px1</item>
    </style>
    
    <style name="DividerVertical">
        <item name="android:background">@color/ver_divide_line</item>
        <item name="android:layout_width">@dimen/px1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BigSubmitBtn">
        <item name="android:background">@drawable/big_submit_btn_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/px22</item>
        <item name="android:paddingBottom">@dimen/px22</item>
        <item name="android:textSize">@dimen/font_28px</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MinePageItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/px38</item>
        <item name="android:paddingRight">@dimen/px38</item>
        <item name="android:paddingTop">@dimen/px28</item>
        <item name="android:paddingBottom">@dimen/px28</item>
        <item name="android:textSize">@dimen/font_26px</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_entrance</item>
        <item name="android:background">@drawable/item_pressed</item>
        <item name="android:clickable">true</item>
    </style>


    <!--live lesson detail-->
    <style name="LessonText">
        <item name="android:paddingTop">@dimen/px32</item>
        <item name="android:paddingBottom">@dimen/px32</item>
        <item name="android:textSize">@dimen/font_26px</item>
    </style>

    <style name="LessonItem">
        <item name="android:paddingLeft">@dimen/px32</item>
        <item name="android:paddingRight">@dimen/px32</item>
    </style>

    <style name="LiveLessonTextView" parent="LessonText">
        <item name="android:textSize">@dimen/font_30px</item>
        <item name="android:textColor">@color/font_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LiveLessonItem" parent="LessonItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LiveLessonTitle" parent="LessonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/px160</item>
        <item name="android:textSize">@dimen/font_28px</item>
        <item name="android:textColor">@color/font_black</item>
    </style>

    <style name="LiveLessonCreateTitle" parent="LiveLessonTitle">
        <item name="android:minWidth">@dimen/px160</item>
    </style>

    <style name="LiveLessonDetailItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/px28</item>
        <item name="android:paddingRight">@dimen/px28</item>
    </style>

    <style name="LiveLessonCreateEdt" parent="LessonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_26px</item>
        <item name="android:textColor">@color/font_create_lesson_content</item>
        <item name="android:textColorHint">@color/subject_selected_blue</item>
        <item name="android:background">@null</item>
        <item name="android:lines">1</item>
    </style>

    <style name="LiveLessonRightEntrance" parent="LessonText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_create_lesson_content</item>
        <item name="android:textColorHint">@color/subject_selected_blue</item>
        <item name="android:drawableRight">@drawable/ic_entrance</item>
        <item name="android:drawablePadding">@dimen/px22</item>
        <item name="android:gravity">right</item>
        <item name="android:lines">1</item>
    </style>

    <style name="LiveLessonText" parent="LiveLessonTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/px14</item>
        <item name="android:lines">1</item>
    </style>

    <style name="LiveLessonDetailTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/px170</item>
        <item name="android:textSize">@dimen/font_26px</item>
        <item name="android:paddingTop">@dimen/px16</item>
        <item name="android:paddingBottom">@dimen/px16</item>
        <item name="android:textColor">@color/font_dark_gray</item>
    </style>

    <style name="LiveLessonDetailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_28px</item>
        <item name="android:paddingTop">@dimen/px16</item>
        <item name="android:paddingBottom">@dimen/px16</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:paddingLeft">@dimen/px14</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="lesson_home_layout">
        <item name="android:paddingLeft">@dimen/px24</item>
        <item name="android:paddingRight">@dimen/px24</item>
        <item name="android:paddingTop">@dimen/px32</item>
        <item name="android:paddingBottom">@dimen/px32</item>
        <item name="android:background">@drawable/lesson_home_lay_bg</item>
    </style>
    <style name="lesson_home_textview">
        <item name="android:layout_marginTop">@dimen/px22</item>
        <item name="android:textSize">@dimen/font_26px</item>
    </style>

    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ProgressBar 样式 -->
    <!--<style name="loading_progress" parent="@android:style/Widget.ProgressBar.Large">-->
        <!--<item name="android:indeterminateDrawable">@drawable/progress_loading_rote</item>-->
    <!--</style>-->

    <style name="activity_dialog_style">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- ExpandableListView的样式 -->
    <style name="ex_listview_group">
        <item name="android:dividerHeight">1dp</item>
        <!--<item name="android:listSelector">@drawable/comon_list_selector</item>-->
        <item name="android:divider">@color/expandable_list_group_divider</item>
        <item name="android:childDivider">@color/expandable_list_child_divider</item>
        <!--<item name="android:cacheColorHint">#00000000</item>-->
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <!-- 透明Activity样式从下往上弹出 -->
    <style name="ActivityStyleBottomToTop" parent="android:Theme.Translucent">

        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 动画效果 -->
        <item name="android:windowAnimationStyle">@style/bottom_to_upStyle</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置是否背景模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:baselineAlignBottom">true</item>
    </style>

    <style name="bottom_to_upStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <!-- 透明Activity的dialog样式 -->
    <style name="scan_image_activity" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- 透明Activity的dialog样式 -->
    <style name="CustomerDialog" parent="android:Theme.Translucent">

        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/translucent_30</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置是否背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:baselineAlignBottom">true</item>
    </style>

    <style name="jmui_chat_text_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/course_state_end_bg</item>
    </style>


    <style name="dlg_upgrade" parent="android:style/Theme.Dialog">

        <!-- 屏幕背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <!--<item name="android:windowAnimationStyle">@style/quick</item>-->
    </style>


    <style name="PlayerVideoTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>


</resources>
