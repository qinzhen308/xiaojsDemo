<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowAnimationStyle">@style/ActAnimationStyle</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="ActAnimationStyle" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/base_act_anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/base_act_anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/base_act_back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/base_act_back_exit</item>
    </style>
    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="BottomSheetAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>
    <style name="DividerHorizontal">
        <item name="android:background">@color/hor_divide_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px1</item>
    </style>
    <style name="DividerVertical">
        <item name="android:background">@color/ver_divide_line</item>
        <item name="android:layout_width">@dimen/px1</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="BigSubmitBtn">
        <item name="android:background">@drawable/big_submit_btn_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/px22</item>
        <item name="android:paddingBottom">@dimen/px22</item>
        <item name="android:textSize">@dimen/font_28px</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MinePageItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/px60</item>
        <item name="android:paddingRight">@dimen/px50</item>
        <item name="android:paddingTop">@dimen/px35</item>
        <item name="android:paddingBottom">@dimen/px35</item>
        <item name="android:textSize">@dimen/font_26px</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_entrance</item>
        <item name="android:background">@drawable/item_pressed</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
