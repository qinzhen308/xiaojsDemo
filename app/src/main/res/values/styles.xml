    <style name="LiveLessonRightEntrance" parent="LessonText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_gray</item>
        <item name="android:drawableRight">@drawable/ic_entrance</item>
        <item name="android:drawablePadding">@dimen/px22</item>
        <item name="android:gravity">right</item>
        <item name="android:lines">1</item>
    </style>

    <style name="LiveLessonText" parent="LiveLessonTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/px14</item>
        <item name="android:lines">1</item>
    </style>

    <style name="LiveLessonDetailTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/px170</item>
        <item name="android:textSize">@dimen/font_30px</item>
        <item name="android:paddingTop">@dimen/px16</item>
        <item name="android:paddingBottom">@dimen/px16</item>
        <item name="android:textColor">@color/font_light_gray</item>
    </style>

    <style name="LiveLessonDetailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_30px</item>
        <item name="android:paddingTop">@dimen/px16</item>
        <item name="android:paddingBottom">@dimen/px16</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:paddingLeft">@dimen/px14</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="lesson_home_layout">
        <item name="android:paddingLeft">@dimen/px24</item>
        <item name="android:paddingRight">@dimen/px24</item>
        <item name="android:paddingTop">@dimen/px32</item>
        <item name="android:paddingBottom">@dimen/px32</item>
        <item name="android:background">@drawable/lesson_home_lay_bg</item>
    </style>
    <style name="lesson_home_textview">
        <item name="android:layout_marginTop">@dimen/px22</item>
        <item name="android:textSize">@dimen/font_26px</item>
    </style>

    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ProgressBar 样式 -->
    <!--<style name="loading_progress" parent="@android:style/Widget.ProgressBar.Large">-->
        <!--<item name="android:indeterminateDrawable">@drawable/progress_loading_rote</item>-->
    <!--</style>-->

    <style name="activity_dialog_style">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- ExpandableListView的样式 -->
    <style name="ex_listview_group">
        <item name="android:dividerHeight">1dp</item>
        <!--<item name="android:listSelector">@drawable/comon_list_selector</item>-->
        <item name="android:divider">@color/expandable_list_group_divider</item>
        <item name="android:childDivider">@color/expandable_list_child_divider</item>
        <!--<item name="android:cacheColorHint">#00000000</item>-->
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <!-- 透明Activity样式从下往上弹出 -->
    <style name="ActivityStyleBottomToTop" parent="android:Theme.Translucent">

        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 动画效果 -->
        <item name="android:windowAnimationStyle">@style/bottom_to_upStyle</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置是否背景模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:baselineAlignBottom">true</item>
    </style>

    <style name="bottom_to_upStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <!-- 透明Activity的dialog样式 -->
    <style name="CustomerDialog" parent="android:Theme.Translucent">

        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/translucent_30</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置是否背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:baselineAlignBottom">true</item>
    </style>

    <style name="jmui_chat_text_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/course_state_end_bg</item>
    </style>

    <style name="jmui_chat_display_name_style">
        <item name="android:ems">5</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#545454</item>
        <item name="android:textSize">10sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="jmui_chat_item_receive_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="jmui_chat_item_receiver_avatar_style">
        <item name="android:layout_width">@dimen/item_head_icon_size</item>
        <item name="android:layout_height">@dimen/item_head_icon_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@drawable/jmui_head_icon</item>
        <item name="android:scaleType">fitXY</item>
