<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/moment_comment_bg"
        android:orientation="vertical">

    <View style="@style/LCIMDividerLine.Horizontal"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px96"
            android:minHeight="@dimen/lcim_bottom_bar_height"
            android:orientation="horizontal"
            android:paddingTop="@dimen/px6"
            android:paddingBottom="@dimen/px6">

        <EditText
                android:id="@+id/input_bar_et_content"
                style="@style/lcim_input_bar_edittext_style"
                android:layout_weight="1.0"
                android:layout_width="0dp"
                android:imeOptions="actionSend"
                android:background="@color/white"/>

        <FrameLayout
                android:layout_width="@dimen/px100"
                android:layout_height="match_parent"
                android:paddingRight="10dp">

            <ImageButton
                    android:id="@+id/input_bar_btn_action"
                    style="@style/lcim_input_bar_button_style"
                    android:src="@drawable/ic_home_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
            <Button
                    android:id="@+id/input_bar_btn_send_text"
                    style="@style/lcim_input_bar_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/send"
                    android:textSize="@dimen/px28"
                    android:textColor="@color/white"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/orange_round_bg_selector"
                    android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>

    <include layout="@layout/lcim_bottom_bar_more_layout"/>
</LinearLayout>

