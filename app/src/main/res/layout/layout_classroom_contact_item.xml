<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:roundimg="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/px16"
              android:paddingBottom="@dimen/px16"
              android:paddingLeft="@dimen/px20"
              android:gravity="center_vertical">

    <ImageView
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.benyuan.xiaojs.ui.widget.RoundedImageView
            android:id="@+id/portrait"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px80"
            roundimg:oval="true"
            roundimg:border_color="@color/white"
            roundimg:border_width="@dimen/px2"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px10"
            android:layout_marginRight="@dimen/px10"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

        <TextView
                android:id="@+id/name"
                android:textColor="@color/font_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_28px"
                android:text="李阳阳"/>

        <TextView
                android:id="@+id/label"
                android:textColor="@color/font_orange"
                android:text="老师"
                android:textSize="@dimen/font_20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>


    <ImageView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px10"
            android:paddingRight="@dimen/px10"
            android:src="@drawable/ic_message_pressed"/>

    <ImageView
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px10"
            android:paddingRight="@dimen/px10"
            android:src="@drawable/ic_message_pressed"/>

</LinearLayout>
