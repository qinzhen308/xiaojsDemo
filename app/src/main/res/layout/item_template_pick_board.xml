<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px210"
    android:layout_height="@dimen/px302"
    android:padding="@dimen/px15"
    >


    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/font_22px"
        android:gravity="center"
        android:padding="@dimen/px5"
        android:textColor="@color/white"
        android:background="@color/black_opacity_60"
        android:layout_alignBottom="@+id/icon"
        android:layout_alignLeft="@+id/icon"
        android:layout_alignRight="@+id/icon"
        />

    <ImageView
        android:id="@+id/v_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/icon"
        android:layout_marginTop="@dimen/px20"
        android:layout_marginRight="@dimen/px20"
        android:src="@drawable/selector_checked_circle"
        />


</RelativeLayout>