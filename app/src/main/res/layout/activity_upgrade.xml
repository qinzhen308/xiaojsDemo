<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_upgrade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="cn.xiaojs.xma.ui.UpgradeActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/common_white_bg_corner"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            >

        <TextView
                android:id="@+id/tv_title"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_36px"
                android:textStyle="bold"
                android:text="@string/upgrade_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="@dimen/px10"
                />
        <View
                style="@style/DividerHorizontal"
                android:layout_marginTop="@dimen/px10"/>

        <TextView
                android:id="@+id/tv_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/font_32px"
                android:textColor="@color/font_black"
                android:text="@string/u_version"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />
        <TextView
                android:id="@+id/tv_tips_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/px36"
                android:textColor="@color/font_black"
                android:text="@string/upgrade_tips_title"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="visible"/>

        <TextView
                android:id="@+id/tv_update_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_32px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="asdghglfihgs哦额为飞机哦俄方将哦 is 飞机哦水淀粉  第四阶段佛 is 发动机大佛寺的金佛山放假水淀粉"
                android:visibility="visible"
                />
        <View
                style="@style/DividerHorizontal"
                android:layout_marginTop="20dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <Button
                    android:id="@+id/left_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_white_bottomleft_cornor_selector"
                    android:text="@string/upgrade_nexttime"
                    android:textSize="@dimen/font_36px"
                    android:textColor="@color/font_dark_gray"
                    android:paddingTop="@dimen/px30"
                    android:paddingBottom="@dimen/px30"
                    android:layout_height="wrap_content"/>

            <View style="@style/DividerVertical"/>

            <Button
                    android:id="@+id/right_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_white_bottomright_cornor_selector"
                    android:text="@string/upgrade_now"
                    android:textSize="@dimen/font_36px"
                    android:textColor="@color/font_blue"
                    android:paddingTop="@dimen/px30"
                    android:paddingBottom="@dimen/px30"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
