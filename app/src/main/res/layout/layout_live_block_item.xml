<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
            android:id="@+id/live_block_left_blank"
            android:layout_width="@dimen/px10"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/px260"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/live_block_time"
                    android:drawableLeft="@drawable/ic_filter_down"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/font_22px"
                    android:drawablePadding="@dimen/px10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_marginLeft="@dimen/px20"
                    android:layout_gravity="center_vertical"
                    style="@style/DividerHorizontal"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/live_block_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px147"
                android:layout_marginTop="@dimen/px15"
                android:scaleType="fitXY"/>

        <TextView
                android:id="@+id/live_block_title"
                android:textSize="@dimen/font_26px"
                android:textColor="@color/font_black"
                android:maxLines="2"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/live_block_stu_num"
                android:textSize="@dimen/font_22px"
                android:textColor="@color/common_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:id="@+id/live_block_right_blank"
            android:layout_width="@dimen/px10"
            android:layout_height="match_parent"/>
</LinearLayout>