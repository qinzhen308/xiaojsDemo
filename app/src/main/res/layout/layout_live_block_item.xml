<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:background="@drawable/white_grey_selector"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="@dimen/px15"
            android:layout_marginLeft="@dimen/px15"
            android:layout_width="@dimen/px260"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_marginTop="@dimen/px15"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/live_block_time"
                    android:drawableLeft="@drawable/ic_home_time_down"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/font_22px"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/px10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_marginLeft="@dimen/px20"
                    android:layout_gravity="center_vertical"
                    style="@style/DividerHorizontal"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/live_block_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px147"
                android:layout_marginTop="@dimen/px15"
                android:scaleType="fitXY"/>

        <TextView
                android:id="@+id/live_block_title"
                android:textSize="@dimen/font_26px"
                android:textColor="@color/font_black"
                android:layout_marginTop="@dimen/px15"
                android:maxLines="2"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/live_block_stu_num"
                android:textSize="@dimen/font_22px"
                android:layout_marginTop="@dimen/px20"
                android:textColor="@color/common_text"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>