<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px40"
            android:background="@color/font_light_gray"
            android:visibility="visible"/>


    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:background="@color/white"
        android:orientation="horizontal">
        <cn.xiaojs.xma.ui.widget.EditTextDel
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_weight="1"
            android:background="@drawable/grey_conner_bg"
            android:drawableLeft="@drawable/ic_search"
            android:gravity="center_vertical"
            android:hint="@string/home_search_hint"
            android:maxLines="1"
            android:paddingBottom="@dimen/px15"
            android:paddingLeft="@dimen/px10"
            android:paddingRight="@dimen/px10"
            android:paddingTop="@dimen/px15"
            android:visibility="gone"
            android:singleLine="true"
            android:textSize="@dimen/font_28px" />

        <LinearLayout
            android:id="@+id/title_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px30"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px30"
            android:background="@drawable/grey_conner_bg"
            android:visibility="visible"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_search"
                android:paddingBottom="@dimen/px15"
                android:paddingLeft="@dimen/px10"
                android:paddingRight="@dimen/px10"
                android:paddingTop="@dimen/px15"
                android:gravity="center"
                android:hint="@string/search"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/font_28px" />


        </LinearLayout>
        <TextView
            android:id="@+id/search_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/px30"
            android:paddingTop="@dimen/px10"
            android:paddingBottom="@dimen/px10"
            android:text="@string/cancel"
            android:visibility="gone"
            android:textColor="@color/main_blue" />

    </LinearLayout>

    <View style="@style/DividerHorizontal" />
    <ScrollView
        android:id="@+id/layout_first_content"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px65"
                android:layout_marginBottom="@dimen/px65"
                android:paddingTop="@dimen/px5"
                android:paddingBottom="@dimen/px5"
                android:paddingLeft="@dimen/px40"
                android:paddingRight="@dimen/px40"
                android:textSize="@dimen/font_28px"
                android:text="选择你要搜索的内容"
                android:textColor="@color/page_tips_text"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/px10"
                android:paddingBottom="@dimen/px40"
                >

                <TextView
                    android:id="@+id/tab_recommend_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px5"
                    android:paddingBottom="@dimen/px5"
                    android:paddingLeft="@dimen/px40"
                    android:paddingRight="@dimen/px40"
                    android:textSize="@dimen/font_30px"
                    android:text="教室"
                    android:textColor="@color/font_blue"
                    />


                <View
                    android:layout_width="@dimen/px2"
                    android:layout_height="match_parent"
                    android:background="@color/cancel_fllow_btn_color"
                    />
                <TextView
                    android:id="@+id/tab_recommend_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px5"
                    android:paddingBottom="@dimen/px5"
                    android:paddingLeft="@dimen/px40"
                    android:textSize="@dimen/font_30px"
                    android:paddingRight="@dimen/px40"
                    android:text="课程"
                    android:textColor="@color/font_blue"
                    />

                <View
                    android:layout_width="@dimen/px2"
                    android:layout_height="match_parent"
                    android:background="@color/cancel_fllow_btn_color"
                    />
                <TextView
                    android:id="@+id/tab_recommend_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px5"
                    android:paddingBottom="@dimen/px5"
                    android:paddingLeft="@dimen/px40"
                    android:paddingRight="@dimen/px40"
                    android:textSize="@dimen/font_30px"
                    android:text="个人"
                    android:textColor="@color/font_blue"
                    />

                <View
                    android:layout_width="@dimen/px2"
                    android:layout_height="match_parent"
                    android:background="@color/cancel_fllow_btn_color"
                    />
                <TextView
                    android:id="@+id/tab_recommend_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px5"
                    android:paddingBottom="@dimen/px5"
                    android:paddingLeft="@dimen/px40"
                    android:textSize="@dimen/font_30px"
                    android:paddingRight="@dimen/px40"
                    android:text="机构"
                    android:textColor="@color/font_blue"
                    />


            </LinearLayout>

            <WebView
                android:id="@+id/webview"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="match_parent"/>


        </LinearLayout>


    </ScrollView>




    <RadioGroup
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px78"
        android:checkedButton="@+id/tab1"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_line_bottom_orange"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:text="综合"
            android:textColor="@color/selector_btn_orange_black"
            android:textSize="@dimen/font_28px" />

        <RadioButton
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_line_bottom_orange"
            android:button="@null"
            android:layout_weight="1"
            android:drawableBottom="@color/main_orange"
            android:gravity="center"
            android:text="教室"
            android:textColor="@color/selector_btn_orange_black"
            android:textSize="@dimen/font_28px" />

        <RadioButton
            android:id="@+id/tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_line_bottom_orange"
            android:button="@null"
            android:drawableBottom="@color/main_orange"
            android:gravity="center"
            android:layout_weight="1"
            android:text="课程"
            android:textColor="@color/selector_btn_orange_black"
            android:textSize="@dimen/font_28px"
            />


        <RadioButton
            android:id="@+id/tab4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_line_bottom_orange"
            android:button="@null"
            android:drawableBottom="@color/main_orange"
            android:gravity="center"
            android:text="个人"
            android:layout_weight="1"
            android:textColor="@color/selector_btn_orange_black"
            android:textSize="@dimen/font_28px" />

        <RadioButton
            android:id="@+id/tab5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_line_bottom_orange"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@color/main_orange"
            android:gravity="center"
            android:text="机构"
            android:textColor="@color/selector_btn_orange_black"
            android:textSize="@dimen/font_28px" />

    </RadioGroup>
    <View style="@style/DividerHorizontal" />


    <FrameLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/load_state_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


</LinearLayout>




