<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:background="@drawable/white_grey_selector"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
            android:layout_marginRight="@dimen/px30"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginTop="@dimen/px20"
            android:layout_marginBottom="@dimen/px20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/recommend_course_image"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:layout_width="@dimen/px260"
                android:layout_height="@dimen/px147"/>

        <LinearLayout
                android:layout_toRightOf="@id/recommend_course_image"
                android:layout_marginLeft="@dimen/px30"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/recommend_course_name"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_26px"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/recommend_course_desc"
                    android:textSize="@dimen/font_26px"
                    android:textColor="@color/font_orange"
                    android:layout_marginTop="@dimen/px15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/px15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/recommend_course_stu_num"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/font_22px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <com.benyuan.xiaojs.ui.widget.EvaluationStar
                        android:layout_marginLeft="@dimen/px20"
                        android:id="@+id/recommend_course_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>