<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.benyuan.xiaojs.ui.view.MomentHeader
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginTop="@dimen/px30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.benyuan.xiaojs.ui.view.MomentContent
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginTop="@dimen/px30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/moment_detail_prise_sum"
                android:textColor="@color/common_text"
                android:textSize="@dimen/font_28px"
                android:text="22人觉得很赞"
                android:layout_marginLeft="@dimen/px30"
                android:layout_alignParentLeft="true"
                android:paddingTop="@dimen/px30"
                android:paddingBottom="@dimen/px30"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/moment_detail_prise"
                android:textColor="@color/common_text"
                android:textSize="@dimen/font_28px"
                android:text="赞"
                android:drawableLeft="@drawable/ic_praise_off"
                android:drawablePadding="@dimen/px10"
                android:layout_marginLeft="@dimen/px30"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/px30"
                android:paddingTop="@dimen/px30"
                android:paddingBottom="@dimen/px30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.benyuan.xiaojs.ui.widget.ImageMatrixExpandableLayout
            android:id="@+id/moment_detail_image_expand"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginBottom="@dimen/px30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px30"
            android:background="@color/main_bg"/>

    <TextView
            android:id="@+id/moment_detail_comment_summary"
            android:textColor="@color/common_text"
            android:textSize="@dimen/font_28px"
            android:text="222条评论"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginTop="@dimen/px30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>