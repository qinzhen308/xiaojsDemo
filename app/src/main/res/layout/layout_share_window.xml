<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:clickable="true"
              >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/share_to"
            android:textColor="@color/font_black"
            android:textSize="@dimen/px30"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:clickable="true"
            >

        <TextView
                android:id="@+id/tv_xfirends"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_xjsfriends"
                android:textColor="@color/font_dark_gray"
                android:textSize="@dimen/px26"
                android:text="@string/xjs_friend"
                android:clickable="true"/>

        <TextView
                android:id="@+id/tv_ccircle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/font_dark_gray"
                android:drawableTop="@drawable/ic_classcircle"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px26"
                android:text="@string/classes_circle"
                android:clickable="true"/>

        <TextView
                android:id="@+id/tv_qq"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_qq"
                android:textColor="@color/font_dark_gray"
                android:textSize="@dimen/px26"
                android:text="@string/qq"
                android:clickable="true"/>

        <TextView
                android:id="@+id/tv_wechat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/font_dark_gray"
                android:textSize="@dimen/px26"
                android:drawableTop="@drawable/ic_share_wechat"
                android:text="@string/wechat"
                android:clickable="true"/>



    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
        <TextView
                android:id="@+id/tv_fcircle"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:textColor="@color/font_dark_gray"
                android:drawableTop="@drawable/ic_circlefriends"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px26"
                android:text="@string/friend_circle"
                android:clickable="true"/>
        <View
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="1dp"/>
    </LinearLayout>


    <View
            style="@style/DividerHorizontal"
            android:layout_marginTop="@dimen/px10"/>

    <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:background="@drawable/common_white_bottomright_cornor_selector"
            android:text="@string/cancel"
            android:textSize="@dimen/font_28px"
            android:textColor="@color/font_blue"
            android:paddingTop="@dimen/px30"
            android:paddingBottom="@dimen/px30"
            android:layout_height="wrap_content"/>
</LinearLayout>