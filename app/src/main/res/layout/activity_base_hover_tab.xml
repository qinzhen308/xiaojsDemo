<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <cn.xiaojs.xma.ui.base.hover.HoverScrollView
            android:id="@+id/hover_tab_scrollview"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/hover_tab_scroll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

            <FrameLayout
                    android:id="@+id/hover_tab_header_container"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </FrameLayout>
            <!--<LinearLayout
                    android:descendantFocusability="blocksDescendants"
                    android:id="@+id/home_banner_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/myimage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_portrait"/>

                <TextView
                        android:id="@+id/show_event_detail_desc"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#F88FC6"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="美丽的分割条"
                        android:textColor="#333333"
                        android:textSize="14sp"/>
            </LinearLayout>-->

            <cn.xiaojs.xma.ui.base.hover.HorizontalListView
                    android:id="@+id/tab_normal"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@android:color/white"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@android:color/transparent"
                    android:focusable="true"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none"
                    app:dividerWidth="0dp"/>

            <cn.xiaojs.xma.ui.widget.ScrollableViewPager
                    android:id="@+id/hover_tab_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


        </LinearLayout>
    </cn.xiaojs.xma.ui.base.hover.HoverScrollView>
    <!-- 指示器-->
    <cn.xiaojs.xma.ui.base.hover.HorizontalListView
            android:id="@+id/tab_hover"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@android:color/white"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:focusable="true"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            android:visibility="gone"
            app:dividerWidth="0dp"/>

    <LinearLayout
            android:id="@+id/hover_refresh_head"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_hover"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
    </LinearLayout>
</RelativeLayout>