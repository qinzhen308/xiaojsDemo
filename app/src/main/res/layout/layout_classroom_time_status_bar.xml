<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/time_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

    <!--播放时间-->
    <TextView
            android:id="@+id/count_down_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/cr_publish_video_stop"
            android:padding="@dimen/px10"
            android:textColor="@color/font_white"
            android:textSize="@dimen/px28"
            android:drawablePadding="@dimen/px10"
            android:background="@drawable/cr_corner_gray_bg"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginTop="@dimen/px20"
            android:text="00:00:00"/>

    <!--xx直播秀-->
    <TextView
            android:id="@+id/live_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/count_down_time"
            android:padding="@dimen/px10"
            android:textColor="@color/font_white"
            android:textSize="@dimen/px28"
            android:drawablePadding="@dimen/px10"
            android:background="@drawable/cr_corner_gray_bg"
            android:layout_marginLeft="@dimen/px15"
            android:visibility="gone"
            android:layout_marginTop="@dimen/px20"/>

    <ImageView
            android:id="@+id/publish_camera_switcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px20"
            android:layout_marginTop="@dimen/px20"
            android:src="@drawable/cr_publish_camera_switcher"/>

</RelativeLayout>