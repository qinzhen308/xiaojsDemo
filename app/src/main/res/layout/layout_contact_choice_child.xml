<?xml version="1.0" encoding="utf-8"?>
<cn.xiaojs.xma.ui.widget.CheckableLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="10dp"
        >

    <CheckedTextView
            android:id="@+id/check_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkMark="@drawable/multi_check_selector"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/px24"
            android:textSize="18sp"
            />

    <ImageView
            android:id="@+id/contact_avatar"
            android:layout_width="@dimen/contact_thumbnail_size"
            android:layout_height="@dimen/contact_thumbnail_size"
            android:src="@drawable/default_avatar"
            android:layout_marginLeft="20dp"/>

    <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_36px"
            android:textColor="@color/common_text"
            android:layout_marginLeft="10dp"
            />
</cn.xiaojs.xma.ui.widget.CheckableLinearLayout>
