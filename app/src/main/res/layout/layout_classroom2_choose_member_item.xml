<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/root_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
        >

    <CheckedTextView
            android:id="@+id/check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px30"
            android:layout_centerVertical="true"
            android:checkMark="@drawable/filter_material_single_check_selector"
            android:visibility="gone"/>


    <ImageView
            android:id="@+id/avator"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px80"
            android:layout_marginTop="@dimen/px17"
            android:layout_marginBottom="@dimen/px17"
            android:layout_marginLeft="@dimen/px30"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_32px"
            android:textColor="@color/font_black"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginTop="@dimen/px17"
            android:layout_toRightOf="@id/avator"
            android:drawablePadding="@dimen/px8"
            />

    <TextView
            android:id="@+id/flag_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/name"
            android:layout_toRightOf="@id/name"
            android:layout_marginLeft="@dimen/px16"
            android:textSize="@dimen/font_20px"
            android:padding="@dimen/px2"
            android:textColor="@color/font_white"
            />

    <ImageView
            android:id="@+id/o2o_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/flag_mark"
            android:layout_alignBottom="@id/name"
            android:paddingBottom="@dimen/px8"
            android:layout_marginLeft="@dimen/px10"
            android:src="@drawable/ic_oneonone"
            />

    <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/summary_color"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/font_26px"
            android:layout_marginTop="@dimen/px2"
            android:layout_alignLeft="@id/name"
            android:layout_below="@id/name"
            />
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="@color/gray_line"
            android:layout_alignParentBottom="true"
            />
</RelativeLayout>
