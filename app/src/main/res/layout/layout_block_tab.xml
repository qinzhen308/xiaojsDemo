<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/block_title"
                android:layout_marginLeft="@dimen/px30"
                android:paddingTop="@dimen/px35"
                android:paddingBottom="@dimen/px35"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_28px"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/block_fun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_blue"
                android:textSize="@dimen/font_26px"
                android:text="123"
                android:layout_marginRight="@dimen/px30"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>

        <com.benyuan.xiaojs.ui.widget.TabIndicatorView
                android:id="@+id/block_tab"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/block_title"
                android:layout_toLeftOf="@id/block_fun"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px30"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
            style="@style/DividerHorizontal"/>

    <!--<com.benyuan.xiaojs.ui.widget.LazyViewPager
            android:id="@+id/block_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>-->
    <FrameLayout
            android:id="@+id/block_tab_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>