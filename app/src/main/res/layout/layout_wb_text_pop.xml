<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/px20">

    <RelativeLayout
            android:id="@+id/layout_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/horizontal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_wb_horizontal_txt"/>

        <ImageView
                android:id="@+id/vertical_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px20"
                android:layout_toRightOf="@+id/horizontal_text"
                android:src="@drawable/ic_wb_vertical_txt"/>

        <SeekBar
                android:id="@+id/text_size"
                android:layout_width="@dimen/px200"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px16"
                android:layout_below="@+id/horizontal_text"/>
    </RelativeLayout>


    <ImageView
            android:id="@+id/insert_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wb_insert_line"
            android:layout_marginLeft="@dimen/px20"
            android:layout_toRightOf="@+id/layout_left"/>

    <TextView
            android:id="@+id/text_size_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/px60"
            android:gravity="center"
            android:layout_marginTop="@dimen/px16"
            android:background="@color/white"
            android:textColor="@color/font_dark_gray"
            android:paddingLeft="@dimen/px8"
            android:paddingRight="@dimen/px8"
            android:paddingTop="@dimen/px10"
            android:paddingBottom="@dimen/px10"
            android:layout_marginLeft="@dimen/px20"
            android:textSize="@dimen/font_26px"
            android:text="10"
            android:layout_toRightOf="@+id/layout_left"
            android:layout_below="@+id/insert_line"/>
</RelativeLayout>

