<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/px25">

    <ImageView
            android:id="@+id/horizontal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_wb_horizontal_txt"/>

    <ImageView
            android:id="@+id/vertical_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px50"
            android:layout_toRightOf="@+id/horizontal_text"
            android:src="@drawable/ic_wb_vertical_txt"/>

</RelativeLayout>

