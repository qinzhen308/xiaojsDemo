<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <cn.xiaojs.xma.ui.classroom2.widget.CameraPreviewFrameView
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/chat_list"
            android:layout_width="@dimen/px300"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/px281"
            android:layout_marginBottom="@dimen/px124"
            android:layout_marginLeft="@dimen/px30"
            />

    <FrameLayout
            android:id="@+id/video_root"
            android:layout_width="@dimen/px285"
            android:layout_height="@dimen/px160"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginBottom="@dimen/px125"
            android:layout_alignParentBottom="true"
            android:layout_above="@id/chat_list"
            android:visibility="gone">

        <com.pili.pldroid.player.widget.PLVideoTextureView
                android:id="@+id/video_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        <View
                android:id="@+id/overlay_mask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        <ImageView
                android:id="@+id/close_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_opacity_35"
                android:scaleType="centerInside"
                android:src="@drawable/ic_class_videoshutdown"
                android:visibility="gone"/>


    </FrameLayout>

    <include
            layout="@layout/layout_classroom2_control_port"
            android:visibility="gone"
            />

    <include
            layout="@layout/layout_classroom2_control_land"
            />

    <include
            layout="@layout/layout_classroom2_right_slide_panel"
            android:visibility="gone"
            />

</RelativeLayout>