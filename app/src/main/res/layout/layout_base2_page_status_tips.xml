<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:loading="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tips_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        >

    <cn.xiaojs.xma.ui.widget.LoadingView
            android:id="@+id/loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            loading:lsize="@dimen/px60"
            android:visibility="gone"/>

    <TextView
            android:id="@+id/loading_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_white"
            android:layout_centerInParent="true"
            android:layout_below="@id/loading_progress"
            android:layout_marginTop="@dimen/px5"
            android:focusable="false"
            android:textSize="@dimen/font_26px"
            android:text="正在加载"
            android:visibility="gone"
            />

    <TextView
            android:id="@+id/tips_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/font_28px"
            android:textColor="@color/page_tips_text"
            android:drawableTop="@drawable/ic_tips_empty_find_2"
            android:visibility="gone"/>
</RelativeLayout>
