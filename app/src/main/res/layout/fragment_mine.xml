<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

    <LinearLayout
            android:background="@color/main_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include layout="@layout/layout_personal_info"/>

        <!--我授的课-->
        <RelativeLayout
                android:id="@+id/my_teaching_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MinePageItem">

            <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_26px"
                    android:drawableLeft="@drawable/ic_teaching"
                    android:drawablePadding="@dimen/px20"
                    android:text="@string/my_teaching"/>

            <TextView
                    android:id="@+id/my_teaching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/enter_my_teaching"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_26px"
                    android:layout_marginRight="@dimen/px20"/>

            <ImageView
                    android:id="@+id/enter_my_teaching"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_entrance"/>
        </RelativeLayout>


        <View
                style="@style/DividerHorizontal"/>

        <!--我报的名-->
        <RelativeLayout
                android:id="@+id/my_enrollment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MinePageItem">

            <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_26px"
                    android:drawableLeft="@drawable/ic_my_class"
                    android:drawablePadding="@dimen/px20"
                    android:text="@string/my_enrollment"/>

            <TextView
                    android:id="@+id/my_enrollment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/enter_my_enrollment"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_26px"
                    android:layout_marginRight="@dimen/px20"/>

            <ImageView
                    android:id="@+id/enter_my_enrollment"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_entrance"/>
        </RelativeLayout>

        <View
                style="@style/DividerHorizontal"/>


        <!--资料库-->
        <RelativeLayout
                android:id="@+id/my_document_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                style="@style/MinePageItem">

            <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_26px"
                    android:drawableLeft="@drawable/ic_my_doc"
                    android:drawablePadding="@dimen/px20"
                    android:text="@string/my_documents"/>

            <TextView
                    android:id="@+id/my_document"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/enter_my_document"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_26px"
                    android:layout_marginRight="@dimen/px20"/>

            <ImageView
                    android:id="@+id/enter_my_document"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_entrance"/>
        </RelativeLayout>

