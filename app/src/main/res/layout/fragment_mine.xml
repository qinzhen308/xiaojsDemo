        <!--我的订单-->
        <RelativeLayout
                android:id="@+id/my_order_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                style="@style/MinePageItem">

            <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_26px"
                    android:drawableLeft="@drawable/ic_my_order"
                    android:drawablePadding="@dimen/px20"
                    android:text="@string/my_order"/>

            <TextView
                    android:id="@+id/my_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/enter_my_order"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_26px"
                    android:layout_marginRight="@dimen/px20"/>

            <ImageView
                    android:id="@+id/enter_my_order"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_entrance"/>
        </RelativeLayout>


        <!--教学能力-->
        <LinearLayout
                android:id="@+id/teach_ability_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20"
                android:orientation="horizontal"
                style="@style/MinePageItem">

            <TextView
                    android:id="@+id/teach_ability_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_26px"
                    android:drawableLeft="@drawable/ic_teaching_ability"
                    android:drawablePadding="@dimen/px20"
                    android:text="@string/teach_ability"/>

            <TextView
                    android:id="@+id/teach_ability"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textColor="@color/font_dark_gray"
                    android:textSize="@dimen/font_26px"
                    android:maxLines="1"
                    android:gravity="center_vertical|right"
                    android:ellipsize="end"
                    android:text="@string/be_teacher"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/px20"/>

            <ImageView
                    android:id="@+id/enter_teach_ability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_entrance"/>
        </LinearLayout>

        <View
                style="@style/DividerHorizontal"/>

        <!--实名认证-->
        <RelativeLayout
                android:id="@+id/name_auth_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MinePageItem">

            <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_26px"
                    android:drawableLeft="@drawable/ic_name_auth"
                    android:drawablePadding="@dimen/px20"
                    android:text="@string/name_verify"/>

            <TextView
                    android:id="@+id/name_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/enter_name_auth"
                    android:textColor="@color/font_dark_gray"
                    android:textSize="@dimen/px26"
                    android:text="未认证"
                    android:layout_marginRight="@dimen/px20"/>

            <ImageView
                    android:id="@+id/enter_name_auth"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_entrance"/>
        </RelativeLayout>


        <!--设置-->
        <RelativeLayout
                android:id="@+id/settings_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MinePageItem"
                android:layout_marginTop="@dimen/px20"
                android:layout_marginBottom="@dimen/px185">

            <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_26px"
                    android:drawableLeft="@drawable/ic_setting"
                    android:drawablePadding="@dimen/px20"
                    android:text="@string/settings"/>


            <ImageView
                    android:id="@+id/enter_settings"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_entrance"/>
        </RelativeLayout>

    </LinearLayout>
