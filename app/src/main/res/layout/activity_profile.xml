<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:roundimg="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:focusable="true"
              android:focusableInTouchMode="true">

    <RelativeLayout
            android:id="@+id/edit_portrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px28"
            android:paddingRight="@dimen/px26"
            android:paddingTop="@dimen/px14"
            android:paddingBottom="@dimen/px14"
            android:clickable="true"
            android:background="@drawable/item_pressed">

        <TextView
                android:id="@+id/edit_portrait_title"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_26px"
                android:textColor="@color/font_dark_gray"
                android:text="@string/edit_portrait"
                android:layout_centerInParent="true"/>

        <cn.xiaojs.xma.ui.widget.RoundedImageView
                android:id="@+id/portrait"
                android:layout_toRightOf="@+id/edit_portrait_title"
                android:layout_marginLeft="@dimen/px56"
                android:layout_width="@dimen/px86"
                android:layout_height="@dimen/px86"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar_grey"
                roundimg:oval="true"/>

        <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_entrance"/>
    </RelativeLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/px32"
            android:paddingTop="@dimen/px28"
            android:paddingBottom="@dimen/px28">

        <TextView
                android:layout_width="@dimen/px190"
                android:layout_height="wrap_content"
                android:textColor="@color/font_dark_gray"
                android:textSize="@dimen/font_26px"
                android:paddingLeft="@dimen/px28"
                android:text="@string/name"/>

        <cn.xiaojs.xma.ui.widget.EditTextDel
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_28px"
                android:background="@null"
                android:hint="@string/not_setting"
                android:textColorHint="@color/font_light_gray"
                android:paddingRight="@dimen/px26"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

        <View
                style="@style/DividerHorizontal"
                android:layout_marginRight="@dimen/px38"
                android:layout_marginLeft="@dimen/px38"/>
    </FrameLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/px28"
            android:paddingBottom="@dimen/px28">

        <TextView
                android:layout_width="@dimen/px190"
                android:layout_height="wrap_content"
                android:textColor="@color/font_dark_gray"
                android:textSize="@dimen/font_26px"
                android:paddingLeft="@dimen/px28"
                android:text="@string/sex"/>

        <TextView
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                android:hint="@string/not_setting"
                android:textColorHint="@color/font_light_gray"
                android:textSize="@dimen/font_28px"
                android:paddingRight="@dimen/px26"
                android:background="@null"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

        <View
                style="@style/DividerHorizontal"
                android:layout_marginRight="@dimen/px38"
                android:layout_marginLeft="@dimen/px38"/>
    </FrameLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/px28"
            android:paddingBottom="@dimen/px28">

        <TextView
                android:layout_width="@dimen/px190"
                android:layout_height="wrap_content"
                android:textColor="@color/font_dark_gray"
                android:textSize="@dimen/font_26px"
                android:paddingLeft="@dimen/px28"
                android:text="@string/birthday"/>

        <TextView
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_28px"
                android:hint="@string/not_setting"
                android:textColorHint="@color/font_light_gray"
                android:background="@null"
                android:paddingRight="@dimen/px26"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

        <View
                style="@style/DividerHorizontal"
                android:layout_marginRight="@dimen/px38"
                android:layout_marginLeft="@dimen/px38"/>
    </FrameLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/px28"
            android:paddingBottom="@dimen/px28">

        <TextView
                android:layout_width="@dimen/px190"
                android:layout_height="wrap_content"
                android:textColor="@color/font_dark_gray"
                android:textSize="@dimen/font_26px"
                android:paddingLeft="@dimen/px28"
                android:text="@string/personalized_sign"/>

        <cn.xiaojs.xma.ui.widget.EditTextDel
                android:id="@+id/user_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_28px"
                android:paddingRight="@dimen/px26"
                android:maxLines="2"
                android:maxLength="20"
                android:hint="@string/default_profile_txt"
                android:textColorHint="@color/font_light_gray"
                android:background="@null"/>
    </LinearLayout>

</LinearLayout>
