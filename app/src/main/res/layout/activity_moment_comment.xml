<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
            android:id="@+id/moment_comment_outside"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <LinearLayout
            android:orientation="vertical"
            android:background="@color/moment_write_comment_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/moment_comment_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left|top"
                android:layout_marginTop="@dimen/px30"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px35"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_28px"
                android:padding="@dimen/px5"
                android:maxLines="3"
                android:minLines="3"/>

        <Button
                android:id="@+id/moment_comment_send"
                android:textSize="@dimen/font_28px"
                android:textColor="@color/font_black"
                android:minWidth="@dimen/px100"
                android:paddingTop="@dimen/px5"
                android:paddingBottom="@dimen/px5"
                android:text="@string/send"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px30"
                android:layout_marginTop="@dimen/px15"
                android:layout_marginBottom="@dimen/px15"
                android:background="@drawable/moment_comment_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>