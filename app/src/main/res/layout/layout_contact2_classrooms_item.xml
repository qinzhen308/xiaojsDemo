<?xml version="1.0" encoding="utf-8"?>
<cn.xiaojs.xma.ui.widget.CheckableRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <CheckedTextView
            android:id="@+id/check_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/px25"
            android:checkMark="@drawable/multi_check_selector"
            android:visibility="gone"
            />


    <cn.xiaojs.xma.ui.classroom2.widget.ColorIconTextView
            android:id="@+id/avator"
            android:layout_width="@dimen/px89"
            android:layout_height="@dimen/px89"
            android:layout_toRightOf="@id/check_view"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px25"
            android:layout_marginTop="@dimen/px20"
            android:layout_marginBottom="@dimen/px20"
            android:layout_marginRight="@dimen/px20"
            android:paddingLeft="@dimen/px21"
            android:paddingRight="@dimen/px21"
            android:textSize="@dimen/font_36px"
            android:textColor="@color/font_white"
            android:gravity="center"
            />

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_34px"
            android:textColor="@color/font_black"
            android:layout_marginTop="@dimen/px22"
            android:layout_marginRight="@dimen/px20"
            android:layout_toRightOf="@id/avator"
            android:singleLine="true"
            android:ellipsize="end"
            />

    <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_26px"
            android:textColor="@color/summary_color"
            android:layout_marginTop="@dimen/px10"
            android:layout_marginRight="@dimen/px20"
            android:layout_marginBottom="@dimen/px22"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/title"
            android:singleLine="true"
            android:ellipsize="end"
            />
</cn.xiaojs.xma.ui.widget.CheckableRelativeLayout>
