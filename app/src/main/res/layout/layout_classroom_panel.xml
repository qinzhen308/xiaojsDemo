<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white">

    <RelativeLayout
            android:id="@+id/main_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/top_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="@dimen/px16"
                android:paddingBottom="@dimen/px16"
                android:paddingLeft="@dimen/px20"
                android:paddingRight="@dimen/px20"
                android:background="@color/main_gray">

            <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="@dimen/px10"
                    android:paddingRight="@dimen/px10"
                    android:src="@drawable/back_arrow"/>

            <ImageView
                    android:id="@+id/play_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/px10"
                    android:paddingRight="@dimen/px10"
                    android:layout_toRightOf="@+id/back_btn"
                    android:src="@drawable/ic_open_course"/>


            <ImageView
                    android:id="@+id/pause_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/px10"
                    android:paddingRight="@dimen/px10"
                    android:layout_toRightOf="@+id/play_btn"
                    android:src="@drawable/ic_open_course"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/pause_btn"
                    android:layout_toLeftOf="@+id/contact_btn"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/lesson_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="战略性积极管理"/>

                <TextView
                        android:id="@+id/lesson_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="01:15:30"/>
            </LinearLayout>


            <ImageView
                    android:id="@+id/contact_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/px10"
                    android:paddingRight="@dimen/px10"
                    android:layout_toLeftOf="@+id/notify_msg_btn"
                    android:src="@drawable/ic_open_course"/>

            <ImageView
                    android:id="@+id/notify_msg_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/px10"
                    android:paddingRight="@dimen/px10"
                    android:layout_toLeftOf="@+id/setting_btn"
                    android:src="@drawable/ic_open_course"/>


            <ImageView
                    android:id="@+id/setting_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/px10"
                    android:paddingRight="@dimen/px10"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_open_course"/>

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/left_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/px10"
                android:layout_marginLeft="@dimen/px10"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/blackboard_switcher_btn"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cr_blackboard_switcher"/>

            <ImageView
                    android:id="@+id/teaching_plan_btn"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/px10"
                    android:src="@drawable/cr_teaching_switcher"/>


            <ImageView
                    android:id="@+id/qa_btn"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cr_qa"
                    android:layout_marginTop="@dimen/px10"/>

            <ImageView
                    android:id="@+id/more_btn"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cr_more"
                    android:layout_marginTop="@dimen/px10"/>

        </LinearLayout>


        <LinearLayout
                android:id="@+id/bottom_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/px10"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/screen_share_btn"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cr_qa"/>

            <ImageView
                    android:id="@+id/doodle_btn"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cr_qa"
                    android:layout_marginLeft="@dimen/px10"/>

            <ImageView
                    android:id="@+id/share_btn"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cr_qa"
                    android:layout_marginLeft="@dimen/px10"/>

            <ImageView
                    android:id="@+id/download_btn"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cr_qa"
                    android:layout_marginLeft="@dimen/px10"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/right_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/px10"
                android:layout_marginBottom="@dimen/px10">

            <ImageView
                    android:id="@+id/msg_btn"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cr_msg"/>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
