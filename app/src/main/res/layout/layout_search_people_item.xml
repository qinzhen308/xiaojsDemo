<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:background="@drawable/white_grey_selector"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <cn.xiaojs.xma.ui.widget.RoundedImageView
            android:id="@+id/search_people_head"
            app:oval="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_portrait"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/px30"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginBottom="@dimen/px30"
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px100"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/px30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/search_people_item_name"
                    android:text="王小波"
                    android:textSize="@dimen/font_30px"
                    android:textColor="@color/font_black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <cn.xiaojs.xma.ui.widget.EvaluationStar
                    android:id="@+id/search_people_star"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/search_people_item_name"
                    android:layout_marginLeft="@dimen/px30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/search_people_relationship"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_follow_both"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_marginTop="@dimen/px10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/search_people_tag"
                    android:text="同学"
                    android:textSize="@dimen/font_28px"
                    android:textColor="@color/common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/search_people_desc"
                    android:text="2017考研政治高分培训小班"
                    android:layout_marginLeft="@dimen/px30"
                    android:textSize="@dimen/font_28px"
                    android:textColor="@color/common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>