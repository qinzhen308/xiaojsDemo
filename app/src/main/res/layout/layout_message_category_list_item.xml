<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/message_list_item_time"
            android:textColor="@color/common_text"
            android:textSize="@dimen/font_22px"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginTop="@dimen/px30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/message_list_item_content"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_30px"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginTop="@dimen/px30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            style="@style/DividerHorizontal"
            android:layout_marginTop="@dimen/px30"/>

    <RelativeLayout
            android:id="@+id/message_list_item_opera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px70">

        <TextView
                android:id="@+id/message_list_item_opera1"
                android:textSize="@dimen/font_28px"
                android:textColor="@color/common_text"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/px30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/message_list_item_opera2"
                android:textSize="@dimen/font_28px"
                android:textColor="@color/font_blue"
                android:layout_toLeftOf="@id/message_list_item_opera1"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/px60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
            android:id="@+id/message_list_item_bottom_divider"
            style="@style/DividerHorizontal"/>
</LinearLayout>