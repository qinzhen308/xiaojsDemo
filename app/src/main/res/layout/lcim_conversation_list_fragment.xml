<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px90"
                    android:background="@color/white"
                    android:orientation="horizontal">

        <ImageView
                android:id="@+id/left_image"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/px30"
                android:layout_centerInParent="true"
                android:src="@drawable/back_arrow"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/middle_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_34px"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:text="@string/home_tab_message"
                android:layout_gravity="center"
                android:textColor="@color/def"/>

        <ImageView
                android:id="@+id/right_image"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px30"
                android:src="@drawable/add_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        <ImageView
                android:id="@+id/people_image"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mail_list_selector"
                />
    </RelativeLayout>

    <View style="@style/DividerHorizontal"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_conversation_srl_pullrefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/px110">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_conversation_srl_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:background="@color/white"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>