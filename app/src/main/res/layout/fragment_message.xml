<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px90"
                    android:background="@color/white"
                    android:orientation="horizontal">

        <ImageView
                android:id="@+id/left_image"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/px30"
                android:layout_centerInParent="true"
                android:src="@drawable/back_arrow"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/middle_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_34px"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:text="@string/home_tab_message"
                android:layout_gravity="center"
                android:textColor="@color/def"/>

        <ImageView
                android:id="@+id/right_image"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px30"
                android:src="@drawable/add_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/people_image"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/px30"
                android:layout_toLeftOf="@id/right_image"
                android:src="@drawable/mail_list_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View style="@style/DividerHorizontal"/>

    <com.benyuan.xiaojs.common.pulltorefresh.core.PullToRefreshSwipeListView

            android:id="@+id/listview"
            android:orientation="vertical"
            android:dividerHeight="0dp"
            android:paddingBottom="@dimen/px100"
            android:divider="@android:color/transparent"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </com.benyuan.xiaojs.common.pulltorefresh.core.PullToRefreshSwipeListView>
</LinearLayout>