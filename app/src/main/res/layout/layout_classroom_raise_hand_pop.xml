<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/classroom_main_gray"
              android:orientation="vertical"
              android:padding="@dimen/px16">

    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/font_white"
            android:textSize="@dimen/font_28px"
            android:text="Luce"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/px16">

        <ImageView
                android:id="@+id/msg_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_message"
                android:paddingLeft="@dimen/px20"
                android:paddingRight="@dimen/px20"/>

        <ImageView
                android:id="@+id/video_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cr_contact_book"
                android:paddingLeft="@dimen/px20"
                android:paddingRight="@dimen/px20"/>

        <ImageView
                android:id="@+id/record_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_message"
                android:paddingLeft="@dimen/px20"
                android:paddingRight="@dimen/px20"/>

        <ImageView
                android:id="@+id/add_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cr_contact_book"
                android:paddingLeft="@dimen/px20"
                android:paddingRight="@dimen/px20"/>
    </LinearLayout>


</LinearLayout>
