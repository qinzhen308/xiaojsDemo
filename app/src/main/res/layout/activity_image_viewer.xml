<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/image_viewer_container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >

    <cn.xiaojs.xma.ui.widget.scaleimage.ScaleViewPager
            android:id="@+id/image_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <cn.xiaojs.xma.ui.widget.banner.PointIndicateView
            android:id="@+id/image_pager_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/px50"
            android:orientation="horizontal"
            android:visibility="gone"/>

    <cn.xiaojs.xma.ui.widget.banner.PageNumView
            android:id="@+id/text_pager_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/px50"
            android:orientation="horizontal"
            android:textColor="@color/white"
            />


    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88"
        android:background="@color/translucent_50"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_34px"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:layout_marginLeft="@dimen/px80"
            android:layout_marginRight="@dimen/px80"
            />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px35"
            android:padding="@dimen/px5"
            />
    </RelativeLayout>

</FrameLayout>