<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_test_api"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >


    <Button
            android:id="@+id/btn_svc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send verify code"
            android:onClick="btnClicked"/>

    <Button
            android:id="@+id/btn_svm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="verify mobile"
            android:onClick="btnClicked"/>

    <Button
            android:id="@+id/btn_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quite"
            android:onClick="btnClicked"/>

    <ImageView
            android:id="@+id/loading"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <View
                android:background="@drawable/trans_30_circle"
                android:layout_width="@dimen/px120"
                android:layout_height="@dimen/px120"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <cn.xiaojs.xma.ui.view.AnimationView
                    android:id="@+id/animation"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/live_animation"/>

            <TextView
                    android:layout_marginTop="@dimen/px10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_26px"
                    android:text="直播中"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


    </FrameLayout>

    <cn.xiaojs.xma.ui.classroom2.widget.O2oDragLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkgreen">

        <TextView
                android:id="@+id/nnd"
                android:layout_width="@dimen/px100"
                android:layout_height="@dimen/px100"
                android:background="@color/blue"
                android:layout_centerInParent="true"
                android:text="nnd"
                android:clickable="true"/>

    </cn.xiaojs.xma.ui.classroom2.widget.O2oDragLayout>


</LinearLayout>
