<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_margin="@dimen/px30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/personal_info_image"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/px100"
                    android:layout_height="@dimen/px100"/>

            <LinearLayout
                    android:layout_toRightOf="@id/personal_info_image"
                    android:layout_marginLeft="@dimen/px30"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <cn.xiaojs.xma.ui.widget.IconTextView
                        android:id="@+id/personal_info_name"
                        android:textSize="@dimen/font_30px"
                        android:textColor="@color/font_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/personal_info_desc"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/font_26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

        <View
                style="@style/DividerHorizontal"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px30"/>

        <TextView
                android:id="@+id/grade_home_material"
                android:layout_width="match_parent"
                android:text="他的主页"
                style="@style/MinePageItem"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_30px"
                android:textStyle="normal"/>
    </LinearLayout>

    <Button
            android:id="@+id/personal_info_follow"
            style="@style/BigSubmitBtn"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginTop="@dimen/px90"
            android:text="@string/follow_and_send_message"/>
</LinearLayout>