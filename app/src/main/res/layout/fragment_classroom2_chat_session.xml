<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/white"
        >

    <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="@dimen/px88"
            android:text="聊天"
            android:gravity="center"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_32px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


    <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px88"
            android:drawableLeft="@drawable/ic_back"
            android:padding="@dimen/px28"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    <ImageView
            android:id="@+id/more_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px88"
            android:src="@drawable/ic_more"
            android:padding="@dimen/px28"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <View
            android:id="@+id/title_line"
            android:layout_width="0dp"
            android:layout_height="@dimen/px1"
            android:background="@color/hor_divide_line"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/chat_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:background="@color/classroom_gray_1"
            app:layout_constraintTop_toBottomOf="@id/title_line"
            app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    <include
            android:id="@+id/bottom_bar"
            layout="@layout/layout_classroom2_chat_session_bottom_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


    <TextView
            android:id="@+id/pop_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/class_enterclassroombg"
            android:textColor="@color/font_white"
            android:textSize="@dimen/font_28px"
            android:gravity="center"
            android:layout_marginBottom="@dimen/px21"
            android:layout_marginLeft="@dimen/px22"
            app:layout_constraintBottom_toTopOf="@id/bottom_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="gone"/>




</android.support.constraint.ConstraintLayout>