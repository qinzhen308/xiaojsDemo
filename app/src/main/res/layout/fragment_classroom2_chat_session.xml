<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/white"
                                             >

    <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="@dimen/px88"
            android:text="聊天"
            android:gravity="center"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_32px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


    <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px88"
            android:drawableLeft="@drawable/ic_back"
            android:padding="@dimen/px28"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
            android:id="@+id/more_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px88"
            android:src="@drawable/ic_more"
            android:padding="@dimen/px28"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <View
            android:id="@+id/title_line"
            android:layout_width="0dp"
            android:layout_height="@dimen/px1"
            android:background="@color/hor_divide_line"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/chat_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:background="@color/classroom_gray_1"
            app:layout_constraintTop_toBottomOf="@id/title_line"
            app:layout_constraintBottom_toTopOf="@+id/bottom_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <View
            android:id="@id/bottom_line"
            android:layout_width="0dp"
            android:layout_height="@dimen/px1"
            android:background="@color/hor_divide_line"
            android:layout_marginBottom="@dimen/px100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


    <Button
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px56"
            android:text="@string/send"
            android:gravity="center"
            android:textSize="@dimen/font_28px"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/px20"
            android:paddingRight="@dimen/px20"
            android:paddingTop="@dimen/px5"
            android:paddingBottom="@dimen/px5"
            android:background="@drawable/cr_chat_send_bg"
            android:layout_marginRight="@dimen/px18"
            app:layout_constraintTop_toBottomOf="@id/bottom_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    <cn.xiaojs.xma.ui.widget.SpecialEditText
            android:id="@+id/msg_input"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/cr_msg_input_bg"
            android:paddingLeft="@dimen/px15"
            android:paddingRight="@dimen/px15"
            android:paddingTop="@dimen/px2"
            android:paddingBottom="@dimen/px2"
            android:textSize="@dimen/font_28px"
            android:hint="@string/class_chat_input"
            android:textColorHint="@color/font_gray"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="@dimen/px15"
            android:layout_marginTop="@dimen/px15"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            app:layout_constraintTop_toBottomOf="@id/bottom_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/send_btn"/>


</android.support.constraint.ConstraintLayout>