<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true">

    <View
            android:layout_marginTop="@dimen/px40"
            style="@style/DividerHorizontal"/>

    <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px30"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/reg_name"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/px25"
                android:paddingBottom="@dimen/px25"
                android:hint="@string/name_hint"/>

        <View
                style="@style/DividerHorizontal"/>
    </LinearLayout>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px30"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/reg_phone"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/px25"
                android:paddingBottom="@dimen/px25"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="11"
                android:hint="@string/phone_num"/>

        <View
                style="@style/DividerHorizontal"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px30"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/verify_code"
                    android:background="@null"
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/verify_code_hint"
                    android:imeOptions="actionNext"
                    android:paddingTop="@dimen/px25"
                    android:paddingBottom="@dimen/px25"
                    android:inputType="number"/>

            <TextView
                    android:id="@+id/get_verify_code"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px25"
                    android:paddingBottom="@dimen/px25"
                    android:hint="@string/verify_code_send_hint"/>
        </RelativeLayout>


        <View
                style="@style/DividerHorizontal"/>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px25">

        <EditText
                android:id="@+id/reg_pwd"
                android:background="@null"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pwd_hint"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="16"/>

        <ImageView
                android:id="@+id/hide_show_pwd"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/px10"
                android:src="@drawable/hide_pwd"
                android:hint=""/>
    </RelativeLayout>

    <View
            style="@style/DividerHorizontal"/>

    <Button
            android:id="@+id/register_btn"
            android:layout_marginTop="@dimen/px80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BigSubmitBtn"
            android:layout_marginLeft="@dimen/px80"
            android:layout_marginRight="@dimen/px80"
            android:text="@string/register"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px30"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/register_protocol_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_protocol_agree"/>

        <TextView
                android:id="@+id/register_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1d9de2"
                android:text="@string/register_protocol"/>
    </LinearLayout>


</LinearLayout>
