<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
            android:id="@+id/info"
            layout="@layout/layout_cr_doc_info"/>

    <RelativeLayout
            android:id="@+id/action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg">

        <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_24px"
                android:drawablePadding="@dimen/px10"
                android:drawableLeft="@drawable/ic_cr_doc_rename"
                android:text="@string/share"
                android:gravity="center"
                android:paddingTop="@dimen/px25"
                android:paddingBottom="@dimen/px25"
                android:layout_toLeftOf="@+id/delete"
                android:layout_marginRight="@dimen/px60"/>

        <TextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/px10"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_24px"
                android:drawableLeft="@drawable/ic_cr_doc_del"
                android:text="@string/delete"
                android:gravity="center"
                android:paddingTop="@dimen/px25"
                android:paddingBottom="@dimen/px25"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px60"/>
    </RelativeLayout>


</LinearLayout>
