<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <cn.xiaojs.xma.ui.widget.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:id="@+id/grade_home_scroller"
                                              android:scrollbars="none"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/grade_home_cover"
                        android:src="@drawable/ic_ad"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <LinearLayout
                        android:id="@+id/grade_home_top"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_marginTop="@dimen/px100"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_32px"
                            android:text="2016年人力资源一级"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/px50"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:textSize="@dimen/font_30px"
                                android:textColor="@color/white"
                                android:background="@drawable/light_grey_stoke_corner_bg"
                                android:paddingRight="@dimen/px20"
                                android:paddingLeft="@dimen/px20"
                                android:paddingTop="@dimen/px10"
                                android:paddingBottom="@dimen/px10"
                                android:drawableLeft="@drawable/ic_grade_message"
                                android:drawablePadding="@dimen/px10"
                                android:text="班级聊天"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:textSize="@dimen/font_30px"
                                android:textColor="@color/white"
                                android:layout_marginLeft="@dimen/px30"
                                android:background="@drawable/light_grey_stoke_corner_bg"
                                android:paddingRight="@dimen/px20"
                                android:paddingLeft="@dimen/px20"
                                android:paddingTop="@dimen/px10"
                                android:paddingBottom="@dimen/px10"
                                android:drawableLeft="@drawable/ic_enter_clazz"
                                android:drawablePadding="@dimen/px10"
                                android:text="进入教室"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/grade_home_notice"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/px50"
                            android:layout_marginLeft="@dimen/px30"
                            android:layout_marginRight="@dimen/px30"
                            android:background="@drawable/white_corner_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <RelativeLayout
                                android:layout_marginTop="@dimen/px30"
                                android:layout_marginLeft="@dimen/px30"
                                android:layout_marginRight="@dimen/px30"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:textColor="@color/font_black"
                                    android:textSize="@dimen/font_28px"
                                    android:text="班级公告"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_entrance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>

                        <TextView
                                android:textSize="@dimen/font_28px"
                                android:textColor="@color/common_text"
                                android:layout_marginTop="@dimen/px30"
                                android:layout_marginLeft="@dimen/px30"
                                android:layout_marginRight="@dimen/px30"
                                android:text="温故而知新，上课时遇到的问题，都可以在群里交流哦~"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:textColor="@color/common_text"
                                android:textSize="@dimen/font_26px"
                                android:layout_gravity="right"
                                android:text="2016-12-30 18:22"
                                android:layout_marginRight="@dimen/px30"
                                android:layout_marginTop="@dimen/px30"
                                android:layout_marginBottom="@dimen/px30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                    android:layout_marginTop="@dimen/px30"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/grade_home_material"
                        android:layout_width="match_parent"
                        android:text="@string/data_bank"
                        style="@style/MinePageItem"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_30px"
                        android:textStyle="normal"/>

                <View
                        style="@style/DividerHorizontal"
                        android:layout_marginLeft="@dimen/px30"/>

                <TextView
                        android:id="@+id/grade_home_schedule"
                        android:layout_width="match_parent"
                        android:text="@string/schedule"
                        style="@style/MinePageItem"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_30px"
                        android:textStyle="normal"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/px30"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_marginTop="@dimen/px30"
                        android:layout_marginLeft="@dimen/px30"
                        android:textSize="@dimen/font_30px"
                        android:textColor="@color/font_black"
                        android:text="老师(3)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <cn.xiaojs.xma.ui.widget.AdapterGirdView
                        android:id="@+id/grade_home_teacher_grid"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/px15"
                        android:layout_marginLeft="@dimen/px15"
                        android:layout_marginRight="@dimen/px15"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="auto_fit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px30"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/grade_home_student"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/px30"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_marginTop="@dimen/px30"
                        android:layout_marginLeft="@dimen/px30"
                        android:textSize="@dimen/font_30px"
                        android:textColor="@color/font_black"
                        android:text="学生(3)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <cn.xiaojs.xma.ui.widget.AdapterGirdView
                        android:id="@+id/grade_home_student_grid"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/px15"
                        android:layout_marginLeft="@dimen/px15"
                        android:layout_marginRight="@dimen/px15"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="auto_fit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px30"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/px30"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/grade_home_moment"
                        android:layout_width="match_parent"
                        android:text="动态(122)"
                        style="@style/MinePageItem"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_30px"
                        android:textStyle="normal"/>

                <View style="@style/DividerHorizontal"/>

                <cn.xiaojs.xma.ui.view.MomentHeader
                        android:id="@+id/moment_header"
                        android:layout_marginTop="@dimen/px30"
                        android:layout_marginLeft="@dimen/px30"
                        android:layout_marginRight="@dimen/px30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <cn.xiaojs.xma.ui.view.MomentContent
                        android:id="@+id/moment_content"
                        android:layout_marginTop="@dimen/px30"
                        android:layout_marginLeft="@dimen/px30"
                        android:layout_marginRight="@dimen/px30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <cn.xiaojs.xma.ui.view.MomentUGC
                        android:id="@+id/moment_ugc"
                        android:layout_marginTop="@dimen/px30"
                        android:layout_marginLeft="@dimen/px30"
                        android:layout_marginRight="@dimen/px30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px30"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px50"/>
        </LinearLayout>
    </cn.xiaojs.xma.ui.widget.CustomScrollView>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/grade_home_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px90"
                    android:background="@drawable/ic_home_title_bg"
                    android:orientation="horizontal">

        <TextView
                android:id="@+id/grade_home_left_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px32"
                android:paddingRight="@dimen/px32"
                android:paddingTop="@dimen/px16"
                android:paddingBottom="@dimen/px16"
                android:textColor="@color/font_black"/>

        <ImageView
                android:id="@+id/grade_home_left_image"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="@dimen/px32"
                android:paddingRight="@dimen/px32"
                android:paddingTop="@dimen/px16"
                android:paddingBottom="@dimen/px16"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/grade_home_middle_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_34px"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textColor="@color/def"/>

        <TextView
                android:id="@+id/grade_home_right_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:paddingLeft="@dimen/px32"
                android:paddingRight="@dimen/px32"
                android:paddingTop="@dimen/px16"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingBottom="@dimen/px16"
                android:textColor="@color/font_black"/>

        <ImageView
                android:id="@+id/grade_home_right_image"
                android:paddingLeft="@dimen/px32"
                android:paddingRight="@dimen/px32"
                android:paddingTop="@dimen/px16"
                android:paddingBottom="@dimen/px16"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
            android:id="@+id/grade_home_title_divider"
            android:layout_below="@id/grade_home_title_bar"
            android:visibility="gone"
            style="@style/DividerHorizontal"/>
</RelativeLayout>
