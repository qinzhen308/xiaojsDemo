<?xml version="1.0" encoding="utf-8"?>
<cn.xiaojs.xma.ui.widget.ClosableAdapterSlidingLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root_lay"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@drawable/bottomsheet_bg_white_rect">

        <TextView
                android:id="@+id/title"
                android:layout_width="@dimen/px117"
                android:layout_height="@dimen/px100"
                android:text="Slide demo"
                android:textSize="@dimen/px32"
                android:gravity="center"
                android:textColor="@color/classroom_dark_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</cn.xiaojs.xma.ui.widget.ClosableAdapterSlidingLayout>

