<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/moment_update_target_word_wrapper"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <View
                android:background="@color/light_grey1"
                android:layout_width="@dimen/px5"
                android:layout_height="@dimen/px50"/>

        <TextView
                android:id="@+id/moment_update_target_word"
                android:textColor="@color/common_text"
                android:textSize="@dimen/font_28px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px15"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/moment_update_target_image"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/px147"
            android:layout_height="@dimen/px107"/>

    <LinearLayout
            android:id="@+id/moment_update_target_lesson_wrapper"
            android:orientation="horizontal"
            android:background="@drawable/grey_conner_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/moment_update_target_lesson_image"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/px5"
                android:layout_marginTop="@dimen/px5"
                android:layout_marginBottom="@dimen/px5"
                android:layout_width="@dimen/px175"
                android:layout_height="@dimen/px107"/>

        <TextView
                android:id="@+id/moment_update_target_lesson_name"
                android:textColor="@color/common_text"
                android:textSize="@dimen/font_28px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px30"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>