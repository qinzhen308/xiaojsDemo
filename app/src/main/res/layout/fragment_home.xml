<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.benyuan.xiaojs.common.pulltorefresh.core.PullToRefreshSwipeListView
            android:id="@+id/home_list"
            android:paddingBottom="@dimen/px100"
            android:scrollbars="none"
            android:divider="@color/main_bg"
            android:listSelector="@android:color/transparent"
            android:background="@color/main_bg"
            android:dividerHeight="@dimen/px30"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px88"
            android:background="@drawable/ic_home_title_bg"
            android:orientation="horizontal">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px30"
                android:background="@drawable/ic_home_search"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/my_course_search"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/ic_search"
                    android:layout_centerInParent="true"
                    android:text="@string/home_search_hint"
                    android:textColor="@color/search_gray"
                    android:textSize="@dimen/font_28px"
                    android:drawablePadding="@dimen/px10"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/home_moment_tip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px200"
            android:text="123"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>
