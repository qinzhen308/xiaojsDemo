<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.handmark.pulltorefresh.AutoPullToRefreshListView
            android:id="@+id/home_list"
            android:paddingBottom="@dimen/px100"
            android:scrollbars="none"
            android:divider="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/translucent_30"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/left_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_message_selector"
                android:layout_marginRight="@dimen/px30"
                android:layout_marginLeft="@dimen/px30"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"/>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/common_edittext_bg_with_corner"
                android:paddingBottom="@dimen/px20"
                android:paddingTop="@dimen/px20"
                android:layout_marginTop="@dimen/px20"
                android:layout_marginBottom="@dimen/px20"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/my_course_search"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/ic_search"
                    android:layout_centerInParent="true"
                    android:text="@string/home_search_hint"
                    android:textColor="@color/search_gray"
                    android:textSize="@dimen/font_28px"
                    android:drawablePadding="@dimen/px10"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>


        <ImageView
                android:id="@+id/right_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/home_message_selector"
                android:clickable="true"
                android:layout_marginRight="@dimen/px30"
                android:layout_marginLeft="@dimen/px30"
                android:visibility="visible"/>
    </LinearLayout>

</RelativeLayout>
