<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px148"
    android:paddingLeft="@dimen/px31"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/px2"
    >

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_title"
        android:layout_alignBottom="@+id/tv_title"
        android:layout_marginTop="@dimen/px3"
        android:layout_marginBottom="@dimen/px3"
        android:paddingLeft="@dimen/px6"
        android:paddingRight="@dimen/px8"
        android:gravity="center"
        android:background="@drawable/bg_search_label_green"
        android:text="直播"
        android:textColor="@color/white"
        android:textSize="@dimen/font_24px" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px30"
        android:layout_marginLeft="@dimen/px20"
        android:text="我的标题"
        android:maxLines="1"
        android:layout_toRightOf="@+id/tv_label"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_34px" />


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label"
        android:layout_marginTop="@dimen/px22"
        android:text="2016-11-26 19:00 60分钟"
        android:textColor="@color/common_text"
        android:textSize="@dimen/font_26px" />



    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/px40"
        android:layout_height="@dimen/px40"
        android:scaleType="fitXY"
        android:layout_toLeftOf="@+id/tv_name"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_marginRight="@dimen/px14"
        android:layout_marginBottom="@dimen/px_5"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label"
        android:layout_marginTop="@dimen/px22"
        android:text="撒度1"
        android:layout_marginRight="@dimen/px39"
        android:layout_alignParentRight="true"
        android:textColor="@color/common_text"
        android:textSize="@dimen/font_24px" />




</RelativeLayout>