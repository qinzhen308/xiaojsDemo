<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/px124"
              android:orientation="horizontal"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              >

    <RelativeLayout
        android:id="@+id/conversation_item_layout_avatar"
        android:layout_width="@dimen/px87"
        android:layout_height="@dimen/px87"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/conversation_item_iv_avatar"
            style="@style/LCIMAvatar.Large"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/conversation_item_tv_unread"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:minWidth="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/lcim_read_badge"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="8sp"/>

        <TextView
                android:id="@+id/notify_item_tv_unread"
                android:layout_width="@dimen/px18"
                android:layout_height="@dimen/px18"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/lcim_read_badge"
                android:gravity="center"
                android:textColor="@android:color/white"
                />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/conversation_item_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
            android:layout_marginLeft="@dimen/px23">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/px26"
            >

            <TextView
                android:id="@+id/conversation_item_tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="top"
                android:singleLine="true"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_31px"/>

            <TextView
                android:id="@+id/conversation_item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:singleLine="true"
                    android:textSize="@dimen/font_21px"
                    android:textColor="@color/font_dark_gray"/>
        </LinearLayout>

        <TextView
            android:id="@+id/conversation_item_tv_message"
            style="@style/LCIMTextAppearance.Normal.Gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/px6"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="@dimen/font_25px"/>
    </LinearLayout>
</LinearLayout>