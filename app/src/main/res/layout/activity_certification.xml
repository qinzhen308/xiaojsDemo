<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/certification_status_wrapper"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <FrameLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px200">

                <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/px30"
                        android:layout_marginRight="@dimen/px30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/certification_icon"
                            android:src="@drawable/ic_certification_submit"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/certification_status"
                            android:textColor="@color/font_red"
                            android:textSize="@dimen/font_30px"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@id/certification_icon"
                            android:layout_marginLeft="@dimen/px30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/certification_status_desc"
                            android:textColor="@color/font_red"
                            android:textSize="@dimen/font_28px"
                            android:layout_below="@id/certification_status"
                            android:layout_toRightOf="@id/certification_icon"
                            android:layout_marginTop="@dimen/px10"
                            android:layout_marginLeft="@dimen/px30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/px30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/px50"
                        android:layout_marginLeft="@dimen/px30"
                        android:layout_marginRight="@dimen/px30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textSize="@dimen/font_28px"
                            android:textColor="@color/common_text"
                            android:text="@string/name_certification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/certification_name"
                            android:textColor="@color/font_black"
                            android:textSize="@dimen/font_28px"
                            android:layout_marginLeft="@dimen/px60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/px30"
                        android:layout_marginLeft="@dimen/px30"
                        android:layout_marginRight="@dimen/px30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textSize="@dimen/font_28px"
                            android:textColor="@color/common_text"
                            android:text="@string/certification_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/certification_id_card"
                            android:textColor="@color/font_black"
                            android:textSize="@dimen/font_28px"
                            android:layout_marginLeft="@dimen/px60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/px30"
                        android:layout_marginLeft="@dimen/px30"
                        android:layout_marginRight="@dimen/px30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textSize="@dimen/font_28px"
                            android:textColor="@color/common_text"
                            android:text="@string/submit_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/certification_submit_time"
                            android:textColor="@color/font_black"
                            android:textSize="@dimen/font_28px"
                            android:layout_marginLeft="@dimen/px60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/verify_timer_wrapper"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/px30"
                        android:layout_marginLeft="@dimen/px30"
                        android:layout_marginRight="@dimen/px30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textSize="@dimen/font_28px"
                            android:textColor="@color/common_text"
                            android:text="@string/verify_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/certification_verify_time"
                            android:textColor="@color/font_black"
                            android:textSize="@dimen/font_28px"
                            android:layout_marginLeft="@dimen/px60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px50"/>
            </LinearLayout>

            <Button
                    android:id="@+id/certification_modify"
                    style="@style/BigSubmitBtn"
                    android:layout_marginLeft="@dimen/px30"
                    android:layout_marginRight="@dimen/px30"
                    android:layout_marginTop="@dimen/px60"
                    android:text="@string/modify_certification"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/certification_input_wrapper"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:drawableLeft="@drawable/ic_tips"
                    android:drawablePadding="@dimen/px30"
                    android:layout_marginTop="@dimen/px30"
                    android:text="@string/certification_profit_tips"
                    android:layout_marginLeft="@dimen/px30"
                    android:layout_marginRight="@dimen/px30"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/font_28px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginTop="@dimen/px30"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textSize="@dimen/font_30px"
                            android:textColor="@color/font_black"
                            android:text="@string/name"
                            android:minWidth="@dimen/px120"
                            android:layout_marginLeft="@dimen/px30"
                            android:layout_marginTop="@dimen/px30"
                            android:layout_marginBottom="@dimen/px30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <cn.xiaojs.xma.ui.widget.EditTextDel
                            android:id="@+id/certification_input_name"
                            android:layout_marginLeft="@dimen/px30"
                            android:layout_marginRight="@dimen/px30"
                            android:background="@null"
                            android:textColor="@color/font_black"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/font_30px"
                            android:hint="@string/certification_name_tip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                        style="@style/DividerHorizontal"
                        android:layout_marginLeft="@dimen/px30"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textSize="@dimen/font_30px"
                            android:textColor="@color/font_black"
                            android:text="@string/certification_number"
                            android:minWidth="@dimen/px120"
                            android:layout_marginLeft="@dimen/px30"
                            android:layout_marginTop="@dimen/px30"
                            android:layout_marginBottom="@dimen/px30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <cn.xiaojs.xma.ui.widget.EditTextDel
                            android:id="@+id/certification_input_number"
                            android:layout_marginLeft="@dimen/px30"
                            android:layout_marginRight="@dimen/px30"
                            android:background="@null"
                            android:textColor="@color/font_black"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/font_30px"
                            android:hint="@string/certification_number_tips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/px30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="@dimen/font_30px"
                        android:textColor="@color/font_black"
                        android:layout_marginTop="@dimen/px30"
                        android:layout_marginLeft="@dimen/px30"
                        android:text="@string/certification_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:id="@+id/certification_image_liner"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/px30"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_marginRight="@dimen/px20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <FrameLayout
                            android:id="@+id/certification_image_wrapper"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/px10"
                            android:background="@drawable/white_bolder_bg"
                            android:layout_height="match_parent">

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <ImageView
                                    android:src="@drawable/ic_add_lesson_cover"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:textColor="@color/common_text"
                                    android:textSize="@dimen/font_30px"
                                    android:text="@string/add_photo"
                                    android:layout_marginTop="@dimen/px20"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <ImageView
                                android:id="@+id/certification_image"
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                    </FrameLayout>

                    <FrameLayout
                            android:layout_marginLeft="@dimen/px10"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">

                        <ImageView
                                android:id="@+id/certification_image_sample"
                                android:scaleType="fitXY"
                                android:layout_margin="@dimen/px10"
                                android:src="@drawable/auth_example"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        <ImageView
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_certification_sample"
                                android:layout_gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </FrameLayout>
                </LinearLayout>

                <TextView
                        android:textSize="@dimen/font_28px"
                        android:textColor="@color/common_text"
                        android:layout_marginTop="@dimen/px50"
                        android:layout_marginLeft="@dimen/px30"
                        android:text="@string/certification_require"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textSize="@dimen/font_28px"
                        android:textColor="@color/common_text"
                        android:layout_marginTop="@dimen/px30"
                        android:layout_marginLeft="@dimen/px30"
                        android:text="@string/certification_require1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textSize="@dimen/font_28px"
                        android:textColor="@color/common_text"
                        android:layout_marginLeft="@dimen/px30"
                        android:text="@string/certification_require2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textSize="@dimen/font_28px"
                        android:textColor="@color/common_text"
                        android:layout_marginLeft="@dimen/px30"
                        android:text="@string/certification_require3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px10"/>
            </LinearLayout>

            <Button
                    android:id="@+id/submit"
                    style="@style/BigSubmitBtn"
                    android:text="@string/submit"
                    android:layout_marginLeft="@dimen/px30"
                    android:layout_marginTop="@dimen/px50"
                    android:layout_marginRight="@dimen/px30"/>
        </LinearLayout>
    </FrameLayout>
</ScrollView>