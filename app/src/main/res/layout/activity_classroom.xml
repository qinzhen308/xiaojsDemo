<com.benyuan.xiaojs.ui.classroom.drawer.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/drawer_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

        <EditText
                android:id="@+id/blackboard_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"/>

        <!--白板-->
        <com.benyuan.xiaojs.ui.classroom.whiteboard.Whiteboard
                android:id="@+id/white_board"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>

        <!--控制面板, 直播-->
        <include
                android:id="@+id/main_panel"
                layout="@layout/layout_classroom_panel"/>

    </FrameLayout>

    <FrameLayout
            android:id="@+id/drawer_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/white">

        <include
                android:id="@+id/course_ware"
                layout="@layout/layout_classroom_course_ware"/>
    </FrameLayout>

    <FrameLayout
            android:id="@+id/drawer_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/white">

    </FrameLayout>

</com.benyuan.xiaojs.ui.classroom.drawer.DrawerLayout>