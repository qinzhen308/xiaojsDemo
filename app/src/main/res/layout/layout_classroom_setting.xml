<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/class_room_setting"
                android:textSize="@dimen/font_32px"
                android:textColor="@color/font_black"
                android:padding="@dimen/px30"/>

        <View
                style="@style/DividerHorizontal"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30"
                android:paddingTop="@dimen/px30"
                android:paddingBottom="@dimen/px30"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cr_camera_setting"
                    android:text="@string/camera"
                    android:drawablePadding="@dimen/px12"
                    android:textColor="@color/font_gray"
                    android:minWidth="@dimen/px300"/>

            <ToggleButton
                    android:id="@+id/camera_switcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_btn_selector"
                    android:textOff=""
                    android:textOn=""/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30"
                android:paddingTop="@dimen/px30"
                android:paddingBottom="@dimen/px30"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cr_micro_setting"
                    android:text="@string/microphone"
                    android:drawablePadding="@dimen/px12"
                    android:textColor="@color/font_gray"
                    android:minWidth="@dimen/px300"/>

            <ToggleButton
                    android:id="@+id/microphone_switcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_btn_selector"
                    android:textOff=""
                    android:textOn=""/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_cr_courseware_setting"
                android:text="@string/course_ware_mode"
                android:drawablePadding="@dimen/px12"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30"
                android:paddingTop="@dimen/px20"
                android:paddingBottom="@dimen/px20"
                android:textColor="@color/font_gray"
                android:minWidth="@dimen/px300"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/full_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/single_check_selector"
                    android:text="@string/full_screen"
                    android:drawablePadding="@dimen/px12"
                    android:paddingTop="@dimen/px20"
                    android:paddingBottom="@dimen/px20"
                    android:textColor="@color/font_gray"/>

            <TextView
                    android:id="@+id/fix_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/single_check_selector"
                    android:text="@string/fix_screen"
                    android:drawablePadding="@dimen/px12"
                    android:paddingTop="@dimen/px20"
                    android:paddingBottom="@dimen/px20"
                    android:textColor="@color/font_gray"
                    android:layout_marginLeft="@dimen/px100"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30"
                android:paddingTop="@dimen/px30"
                android:paddingBottom="@dimen/px30"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cr_chat_setting"
                    android:text="@string/class_room_chat"
                    android:drawablePadding="@dimen/px12"
                    android:textColor="@color/font_gray"
                    android:minWidth="@dimen/px300"/>

            <ToggleButton
                    android:id="@+id/class_room_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_btn_selector"
                    android:textOff=""
                    android:textOn=""/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_cr_resolution_setting"
                android:text="@string/video_resolution"
                android:drawablePadding="@dimen/px12"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30"
                android:paddingTop="@dimen/px20"
                android:paddingBottom="@dimen/px20"
                android:textColor="@color/font_gray"
                android:minWidth="@dimen/px300"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/fluent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/single_check_selector"
                    android:text="@string/fluent"
                    android:drawablePadding="@dimen/px12"
                    android:paddingTop="@dimen/px20"
                    android:paddingBottom="@dimen/px20"
                    android:textColor="@color/font_gray"/>

            <TextView
                    android:id="@+id/standard_definition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/single_check_selector"
                    android:text="@string/standard_definition"
                    android:drawablePadding="@dimen/px12"
                    android:paddingTop="@dimen/px20"
                    android:paddingBottom="@dimen/px20"
                    android:textColor="@color/font_gray"
                    android:layout_marginLeft="@dimen/px100"/>

            <TextView
                    android:id="@+id/high_definition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/single_check_selector"
                    android:text="@string/high_definition"
                    android:drawablePadding="@dimen/px12"
                    android:paddingTop="@dimen/px20"
                    android:paddingBottom="@dimen/px20"
                    android:textColor="@color/font_gray"
                    android:layout_marginLeft="@dimen/px100"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>


