<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/px340"
              android:layout_height="@dimen/px560"
              android:orientation="vertical"
              android:background="@drawable/cr_corner_gray_bg">

    <LinearLayout
            android:id="@+id/title"
            android:layout_width="@dimen/px340"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/check_to_discussion"
                android:padding="@dimen/px16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_multi_no_checked"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_white"
                android:textSize="@dimen/font_28px"
                android:layout_gravity="center"
                android:text="@string/send_to_discussion"/>

    </LinearLayout>

    <FrameLayout
            android:layout_width="@dimen/px340"
            android:layout_height="@dimen/px400">
        <ListView
                android:id="@+id/contact_list"
                android:layout_width="@dimen/px340"
                android:layout_height="@dimen/px400"
                android:scrollbars="none"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:dividerHeight="0px"/>

        <TextView
                android:id="@+id/empty_view"
                android:layout_width="@dimen/px340"
                android:layout_height="@dimen/px400"
                android:textColor="@color/font_white"
                android:gravity="center"
                android:text="@string/share_target_empty"
                android:textSize="@dimen/font_22px"
                android:visibility="gone"/>
    </FrameLayout>

    <TextView
            android:id="@+id/confirm_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px16"
            android:layout_marginTop="@dimen/px10"
            android:layout_marginLeft="@dimen/px10"
            android:layout_marginRight="@dimen/px10"
            android:layout_marginBottom="@dimen/px10"
            android:gravity="center"
            android:text="@string/confirm_share"
            android:textColor="@color/font_white"
            android:textSize="@dimen/font_28px"
            android:background="@drawable/cr_corner_blue_bg"/>

</LinearLayout>
